@model List<Cel.Modelo.web.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "ListaUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="conteudoBody container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                <small> Lista usuários</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Dashboard
                </li>
                <li class="">
                    <i class="fa fa-cogs"></i> Configuracoes
                </li>

                <li class="active">
                    <i class="fa fa-cogs"></i> Lista
                </li>
            </ol>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-search"></i> Pesquisa</h3>
        </div>
        <div class="panel-body text-center">
            <form class="form-inline" action="">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" placeholder="João">
                </div>
                <div class="form-group">
                    <label for="nome">Usuário</label>
                    <input type="text" class="form-control" id="nome" placeholder="joao.silva">
                </div>
                <div class="text-right">
                    <input type="button" class=" btn btn-primary" value="Pesquisar" />
                </div>
            </form>


        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Usuários cadastrados</h3>
        </div>

        <div class="panel-body">
            <div class="row text-right">
                <a href="@Url.Action("Create") " class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true">Adicionar </span> 
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        @*<tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ativo)
                            </th>
                            <th>Ações</th>
                        </tr>*@
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ativo)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

                                    <a href="@Url.Action("Create", new { id = item.IdUsuario })" class="btn btn-info">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
                                    </a>
                                    <a href="@Url.Action("Delete")" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
                                    </a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <nav class="text-center">
                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
